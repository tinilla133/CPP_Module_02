CC = g++
CFLAGS = -Wall -Wextra -Werror -std=c++98

SRC = main.cpp
SRC += Fixed.cpp
SRC += Point.cpp
SRC += bsp.cpp
OBJ = $(SRC:.cpp=.o)

NAME = bsp

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean $(NAME)

.PHONY: all clean fclean re